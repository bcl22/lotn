<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/intro_title_text"
        android:text="The Daily News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#8888ee"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/intro_para1"
        android:text="Youâ€™ve just acquired The Daily News. The general election is 8 months away on 7th May 2015. You can tell the editor what to print. Pick a party to support and try to get them in power."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_title_text" />

    <TextView
        android:id="@+id/intro_para2"
        android:text="Each week pick 4 stories out of 6 to print. For some there are multiple headline options. Story selection determines readership and support for political parties."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_para1" />

    <TextView
        android:id="@+id/intro_bullet1"
        android:text="\u2022 Print your newspaper quickly to break stories and increase readership."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_para2" />

    <TextView
        android:id="@+id/intro_bullet2"
        android:text="\u2022 Increase your readership to have more influence."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_bullet1" />

    <TextView
        android:id="@+id/intro_bullet3"
        android:text="\u2022 Be careful of being caught for obvious bias."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_bullet2" />

    <TextView
        android:id="@+id/intro_bullet4"
        android:text="\u2022 Political apathy is already high, be careful of this rising further."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/intro_bullet3" />

    <TextView
        android:id="@+id/intro_party_title"
        android:text="Pick a party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/intro_bullet4" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/intro_party_title">

        <TableRow
            android:layout_width="fill_parent">
            <Button
                android:id="@+id/intro_conservative_button"
                android:text="Conservative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8888ee"
                android:textStyle="bold|italic"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:padding="10dp" />

            <Button
                android:id="@+id/intro_labour_button"
                android:text="Labour"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8888ee"
                android:textStyle="bold|italic"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_alignTop="@+id/intro_conservative_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/intro_libdem_button"
                android:text="Lib Dems"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8888ee"
                android:textStyle="bold|italic"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_below="@+id/intro_conservative_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/intro_ukip_button"
                android:text="UKIP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8888ee"
                android:textStyle="bold|italic"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_alignBottom="@+id/intro_labour_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </TableRow>

        </TableLayout>









</RelativeLayout>

